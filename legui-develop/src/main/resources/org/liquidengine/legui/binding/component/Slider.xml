<class-binding xmlns="binding.legui.liquidengine.org"
    for="org.liquidengine.legui.component.Slider" to="slider" default="true"
    inherit="org/liquidengine/legui/binding/component/Component.xml">
    <bind field="value"/>
    <bind field="orientation"/>
    <bind field="sliderSize"/>
    <bind field="sliderActiveColor" to="sliderActiveColor">
        <using-binding path="org/liquidengine/legui/binding/common/Vector4fColor.xml"/>
    </bind>
    <bind field="sliderColor" to="sliderColor">
        <using-binding path="org/liquidengine/legui/binding/common/Vector4fColor.xml"/>
    </bind>
</class-binding>