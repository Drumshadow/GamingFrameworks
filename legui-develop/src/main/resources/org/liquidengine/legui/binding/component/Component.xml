<class-binding default="true" for="org.liquidengine.legui.component.Component" to="component" xmlns="binding.legui.liquidengine.org">
    <bind field="position" to="position"/>
    <bind field="size">
        <using-binding path="org/liquidengine/legui/binding/common/Vector2fSize.xml"/>
    </bind>

    <bind field="enabled"/>

    <bind field="intersector"/>

    <bind field="hovered"/>
    <bind field="focused"/>
    <bind field="pressed"/>

    <bind field="tooltip"/>

    <bind field="tabIndex"/>
    <bind field="tabFocusable"/>

    <bind field="style"/>
    <bind field="hoveredStyle"/>
    <bind field="focusedStyle"/>
    <bind field="pressedStyle"/>

    <bind field="childComponents" as="field" to="childComponents">
        <using-accessor class="org.liquidengine.legui.binding.accessor.component.ComponentChildComponentsAccessor"/>
    </bind>
</class-binding>