<class-binding xmlns="binding.legui.liquidengine.org"
    for="org.liquidengine.legui.component.ScrollBar" to="scrollBar" default="true"
    inherit="org/liquidengine/legui/binding/component/Component.xml">
    <bind field="orientation"/>
    <bind field="minValue"/>
    <bind field="maxValue"/>
    <bind field="curValue"/>
    <bind field="scrollStep"/>
    <bind field="visibleAmount"/>
    <bind field="arrowsEnabled"/>
    <bind field="arrowSize"/>
    <bind field="arrowColor" to="arrowColor" as="field">
        <using-binding path="org/liquidengine/legui/binding/common/Vector4fColor.xml"/>
    </bind>
    <bind field="scrollColor" to="scrollColor" as="field">
        <using-binding path="org/liquidengine/legui/binding/common/Vector4fColor.xml"/>
    </bind>
</class-binding>