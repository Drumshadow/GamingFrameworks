<class-binding xmlns="binding.legui.liquidengine.org"
    for="org.liquidengine.legui.component.optional.TextState" to="textState" default="true">
    <bind field="font"/>
    <bind field="fontSize"/>
    <bind field="text"/>
    <bind field="horizontalAlign" to="hAlign"/>
    <bind field="verticalAlign" to="vAlign"/>
    <bind field="textColor" to="color" as="field">
        <using-binding path="org/liquidengine/legui/binding/common/Vector4fColor.xml"/>
    </bind>
    <bind field="highlightColor" to="highlightColor" as="field">
        <using-binding path="org/liquidengine/legui/binding/common/Vector4fColor.xml"/>
    </bind>
    <bind field="editable"/>
</class-binding>